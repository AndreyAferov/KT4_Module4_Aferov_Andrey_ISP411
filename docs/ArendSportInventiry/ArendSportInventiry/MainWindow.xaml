<Window x:Class="ArendSportInventiry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArendSportInventiry"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="650" Width="1000"
        MinHeight="650" MinWidth="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383" >
            <Label Content="Прокат спортивного инвентаря" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35"></Label>
            <Image HorizontalAlignment="Left" Margin="150,0,0,0" Source="/Resources/logo.png" />
        </Grid>
        <Frame  Margin="0,30,0,0" x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Frame>
    </Grid>
</Window>
